<% include header.ejs %>
<!-- =============================================== -->

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <%= title %>
      <small>Ajout de sous famille</small>
    </h1>
    <ol class="breadcrumb">
      <li class=""><a href="/index"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class=""><a href="/sousfamilles"><i class="fa fa-dashboard"></i> liste des sous familles</a></li>
      <li class="active"> Ajout sous famille</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Nouveau <%= title %></h3>

      </div>
      <div class="box-body">

        <!--
        - Code
        - Nom de la sous famille
        - Nom de la famille
        - Observation
      -->

        <form class="form-horizontal" action="/sousfamilles/add" method="post">
              <div class="box-body">
                <div class="form-group">
                  <label for="" class="col-sm-2 control-label">Code :</label>
                  <div class="col-sm-10">
                    <input type="text" name="code" class="form-control" id="" placeholder="" value="<%= sousfamilles == null ? "":sousfamilles.code %>">
                  </div>
                </div>

                <!-- <div class="form-group">
                  <label for="" class="col-sm-2 control-label">Nom de la famille :</label>
                  <div class="col-sm-10">
                    <input type="text" name="famille" class="form-control" id="" placeholder="" value="<%= sousfamilles == null ? "":sousfamilles.famille %>">
                  </div>
                </div> -->

                <div class="form-group">
                  <label class="col-sm-2 control-label">Nom de la famille :</label>
                  <div class="col-sm-10">
                      <select name="famille" class="form-control select2">
                          <option value="">Selectionner une famille ...</option>
                          <% for(var i=0; i<familles.length; i++){%>
                            <option value="<%= familles[i].nom + " | " + familles[i].code %>"><%= familles[i].nom %></option>
                          <%}%>
                      </select>
                  </div>
                </div>

                <div class="form-group">
                  <label for="" class="col-sm-2 control-label">Nom de la sous famille :</label>
                  <div class="col-sm-10">
                    <input type="text" name="nom" class="form-control" id="" placeholder="" value="<%= sousfamilles == null ? "":sousfamilles.nom %>">
                  </div>
                </div>



                <div class="form-group">
                  <label for="" class="col-sm-2 control-label">Observation :</label>
                  <div class="col-sm-10">
                    <input type="text" name="observation" class="form-control" id="" placeholder="" value="<%= sousfamilles == null ? "":sousfamilles.observation %>">
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                  </div>
                </div>
              </div>
              <!-- /.box-body -->

        <!-- Start creating your amazing application! -->
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
          <button type="submit" class="btn btn-sm btn-primary pull-right mymg"><i class="fa fa-fw fa-save"></i></button>
          <!-- <a href="#" class="btn btn-sm btn-primary pull-right mymg"><i class="fa fa-fw fa-save"></i></a> -->
          <a href="/sousfamilles" class="btn btn-sm btn-primary pull-right mymg">Liste des <%= title %></a>
      </div>
      <!-- /.box-footer-->
      </form>
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<% include footer.ejs %>


<script>
$(function () {
      //Initialize Select2 Elements
      $(".select2").select2();
});
</script>
